# 1단계: React 앱 빌드
FROM node:18 AS build

WORKDIR /app
COPY . .
RUN npm install
RUN npm run build

# 2단계: Nginx에서 React 빌드 결과 서빙
FROM nginx:alpine

# React 빌드 결과를 Nginx로 복사
COPY --from=build /app/build /usr/share/nginx/html

# kiosk 폴더가 제대로 복사되도록 확인
COPY --from=build /app/build/kiosk /usr/share/nginx/html/kiosk

# Nginx 설정 덮어쓰기
COPY nginx/default.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
